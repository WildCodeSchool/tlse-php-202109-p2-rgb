{% extends 'layout.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="/assets/css/style_homepage.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
{% endblock %}

{% block content %}
    <div class="trending">
        <h1>Tendance du Moment</h1>
        <img src={{ picture }} alt="Tendance">
    </div>
    <h1>Les Genres</h1>
    <div class="cards">
        <div class="row gap-3 justify-content-center">
        {% for card in cards %} 
            <div class="col-auto">
                <div class="text-truncate" style="max-width:140px;"><h2>{{ card['name'] }}</h2></div>
                <div class="imagehomepage">
                    <a href={{ "/category?id=" ~ card['id']}}><img src={{ card['picture'] }} alt={{ card['title'] }}></a>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>     
{% endblock %}
