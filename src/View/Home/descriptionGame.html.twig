{% extends "layout.html.twig" %}
{% block stylesheet %}
	{{parent()}}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
	<link rel="stylesheet" href="/assets/css/descriptionGame.css">
{% endblock %}
{% block title %}Jeu
{% endblock %}
{% block content %}
  <div class='d-flex flex-column align-items-center gap-4'>
    <h2 style='text-align:center; margin:20px auto 20px'>{{ game['name'] }}</h2>
    {% if inList %}
      <div>
        <form action="/descriptionGame?id={{ game['id'] }}" method="POST">
        <input class="btn btn-{{ reviewStatus[0] }}primary" type="submit" value="üëç" name="like" style="border-radius:50%;">
        <input class="btn btn-{{ reviewStatus[1] }}primary" type="submit" value="üëé" name="dislike" style="border-radius:50%;">
        </form>
      </div>
    {% endif %}
    <img src="/assets/images/pictures_game/covers/{{ game['picture'] }}" style="max-width: 25rem; max-height: 12rem;"alt={{ game['name'] }}>
    <div class="d-flex flex-row gap-1">
      {% for tag in tags %}
          <span class="badge bg-primary">{{ tag['name'] }}</span> 
      {% endfor %}
    </div>    
    <p style="max-width: 23rem; text-align: justify;">{{ game['description'] }}</p>
    <div class="d-flex flex-row gap-5 align-items-center">
      <p style="margin: 0; text-align:center; font-size: 1rem;">
        Reviews: <q style="color: {{ like[1] }};">{{ like[0] }}</q>
      </p>
      <p style="margin: 0; max-width: 10rem;">
        Date de Sortie: <strong>{{ game['date_release'] }}</strong>
      </p>
    </div>    
    {% if not inList %}
      <a href="/descriptionGame?id={{ game['id'] }}&gameId={{ game['id'] }}">
        <button type="button" class="btn-lg btn-primary" id="liveAlertBtn"data-toggle="button" aria-pressed="false" autocomplete="off" style='max-width:10rem;'>
          ajouter
        </button>
      </a>
    {% elseif not inList is empty %}
      <h3> Statut du Jeu </h3>
      <div class="d-flex flex-row gap-5">
        <div class="form-check">
          <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" checked>
          <label class="form-check-label" for="flexRadioDefault1">
            A Faire
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2">
          <label class="form-check-label" for="flexRadioDefault2">
            En Cours
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault3">
          <label class="form-check-label" for="flexRadioDefault3">
            Termin√© 
          </label>
        </div>
      </div>
      <div class="progress" style="width : 25rem">
        <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
      </div>
    {% endif %}
    {% if link.username %}
      <h3>Section Commentaire</h3>
	  	<div class="commentaire">
	  		<form method="POST">
	  			<textarea name="commentaire" minlength="5" cols="35" rows="7" wrap="hard" placeholder="Votre commentaire..."></textarea><br/>
	  			<input type="submit" value="Poster mon commentaire" name="submit_commentaire"/>
	  		</form>
      </div>  
	  {% endif %}
  </div>  
{% endblock %}
