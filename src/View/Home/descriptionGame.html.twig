{% extends "layout.html.twig" %}
{% block stylesheet %}
	{{parent()}}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
	<link rel="stylesheet" href="/assets/css/descriptionGame.css">
{% endblock %}
{% block title %}Jeu
{% endblock %}
{% block content %}
  <div class='d-flex flex-column align-items-center gap-4'>
    <h2>{{ game['name'] }}</h2>
    {% if inList %}
      <div>
        <form action="/descriptionGame?id={{ game['id'] }}" method="POST">
        <input class="btn btn-{{ reviewStatus[0] }}primary" type="submit" value="üëç" name="like" style="border-radius:50%;">
        <input class="btn btn-{{ reviewStatus[1] }}primary" type="submit" value="üëé" name="dislike" style="border-radius:50%;">
        </form>
      </div>
    {% endif %}
    <img src="/assets/images/pictures_game/covers/{{ game['picture'] }}" alt={{ game['name'] }}>
    <div class="d-flex flex-row gap-1">
      {% for tag in tags %}
          <span class="badge bg-primary">{{ tag['name'] }}</span> 
      {% endfor %}
    </div>    
    <p>{{ game['description'] }}</p>
    <div class="d-flex flex-row gap-1 align-items-center">
      <p>
        Reviews:<br>
        <q style="color: {{ like[1] }};">{{ like[0] }}</q>
      </p>
      <p>
        Date de Sortie:<br>
        <strong>{{ game['date_release'] }}</strong>
      </p>
    </div>    
    {% if not inList %}
      <a href="/descriptionGame?id={{ game['id'] }}&gameId={{ game['id'] }}">
        <button type="button" class="btn-lg btn-primary" id="liveAlertBtn"data-toggle="button" aria-pressed="false" autocomplete="off">
          ajouter
        </button>
      </a>
    {% endif %}
  </div>
  {% for getCommentsByGame in getAllCommentsByGame %}
			<section class="comment">
				<figure>
					<img src="{{getCommentsByGame['avatar']}}">
					<figcaption>
						{{getCommentsByGame['nickname']}}</figcaption>
				</figure>
				<div class="commentText">
					<p>Post√© le:
						{{getCommentsByGame['date_submitted']}}</p>
					<div class="commentContent">
						<p>{{getCommentsByGame['content']}}</p>
					</div>
					{% if link.username == getCommentsByGame['nickname'] %}
						<form method="POST">
							<input class="Comment" type="submit" value="Changer mon commentaire" name="change_commentaire"/>
						</form>						
							<textarea class="changeCommentById" name="changeComment" minlength="5" cols="35" rows="7" wrap="hard" placeholder="Changer votre commentaire..."></textarea>
							<p class="changeCommentById">{{error}}</p>
					{% endif %}
				</div>
			</section>
		{% endfor %}
  	{% if link.username %}
		<div class="commentaire">
			<form method="POST">
				<textarea name="commentaire" minlength="5" cols="35" rows="7" wrap="hard" placeholder="Votre commentaire..."></textarea><br/>
				<input type="submit" value="Poster mon commentaire" name="submit_commentaire"/>
			</form>
		</div>  
	{% endif %}
{% endblock %}
